@model Blog.ViewModels.Admin.AdminCategoriasRemoverViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Remoção de categoria</h3>
    </div>
    <div class="card-body">
        @if (@Model.Erro != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> Erro!</h5>
                @Model.Erro
            </div>
        }

        <form action="/AdminCategoria/Delete" method="post">
            <div class="form-group mb-3">
                <p class="text-center">
                    Deseja mesmo remover o autor <strong>@Model.Nome</strong>?
                </p>
            </div>
            <div class="form-group mb-3">
                <input type="hidden" name="Id" value="@Model.Id">
                <button type="submit" class="btn btn-primary btn-block">Confirmar</button>
                <p class="text-center mt-3">
                    <a href="/AdminCategoria">Cancelar</a>
                </p>
            </div>
        </form>
    </div>
</div>