@using Blog.ViewModels.Admin
@model Blog.ViewModels.Admin.AdminPostagensEditarViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Editar postagem</h3>
    </div>
    <div class="card-body">
        @if (@Model.Erro != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> Erro!</h5>
                @Model.Erro
            </div>
        }

        <form action="/AdminPostagem/Edit/@Model.Id" method="post">
            <div class="form-group mb-3">
                <label for="nome">Titulo</label>
                <input id="nome" name="titulo" type="text" class="form-control" value="@Model.Titulo" required>
            </div>
            <div class="form-group mb-3">
                <label for="nome">Capa</label>
                <input id="nome" name="UrlCapa" type="url" class="form-control" value="@Model.Capa" required>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="categoria">Categoria</label>
                        <select class="form-control" id="categoria" name="categoriaId" required>
                            @foreach (CategoriaAdminPostagens categoria in Model.Categorias)
                            {
                                @if (Model.CategoriaId == categoria.Id)
                                {
                                    <option selected value="@categoria.Id">@categoria.Nome</option>
                                }
                                else
                                {
                                    <option value="@categoria.Id">@categoria.Nome</option>
                                }

                            }
                        </select>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="autor">Autor</label>
                        <select class="form-control" id="autor" name="autorId" required>
                            @foreach (AutorAdminPostagens autor in Model.Autores)
                            {
                                @if (Model.AutorId == autor.Id)
                                {
                                    <option selected value="@autor.Id">@autor.Nome</option>
                                }
                                else
                                {
                                    <option value="@autor.Id">@autor.Nome</option>
                                }

                            }
                        </select>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="etiquetas">Etiquetas</label>
                        <select multiple class="form-control" id="etiquetas" name="etiquetas">
                            @foreach (EtiquetaAdminPostagens etiqueta in Model.Etiquetas)
                            {
                                @if (Model.EtiquetasPostagem.Contains(etiqueta.Id))
                                {
                                    <option selected value="@etiqueta.Id">@etiqueta.Nome</option>
                                }
                                else
                                {
                                    <option value="@etiqueta.Id">@etiqueta.Nome</option>
                                }

                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="texto">Texto</label>
                <textarea class="form-control" id="texto" rows="10" name="texto" required>@Model.Texto</textarea>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary btn-block">Criar</button>
                <p class="text-center mt-3">
                    <a href="/AdminPostagem">Cancelar</a>
                </p>
            </div>
        </form>
    </div>
</div>